<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="StyleBase" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style x:Key="StyleTitle" TargetType="Label"
           BasedOn="{StaticResource StyleBase}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="DarkRed"/>
    </Style>
    
    <Style x:Key="StyleDescription" TargetType="Label"
           BasedOn="{StaticResource StyleBase}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
    <Style x:Key="StylePrice" TargetType="Label"
           BasedOn="{StaticResource StyleBase}">
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
    
    <Style x:Key="StyleBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Blue"/>
    </Style>
</ResourceDictionary>