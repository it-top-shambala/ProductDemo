<UserControl x:Class="Products.Components.Component_Card.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Products"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <ResourceDictionary Source="CardStyles.xaml"/>
    </UserControl.Resources>
    
    <Border Style="{StaticResource StyleBorder}">
        <StackPanel>
            <Label x:Name="LabelTitle"
                   Style="{StaticResource StyleTitle}"/>
            <Label x:Name="LabelDescription"
                   Style="{StaticResource StyleDescription}"/>
            <Label x:Name="LabelPrice"
                   Style="{StaticResource StylePrice}"/>
        </StackPanel>
    </Border>
</UserControl>
